# Copy this file to .env.local and fill in with actual values
# DO NOT commit .env.local to git (add to .gitignore)

# Database Configuration
DB_HOST=localhost
DB_NAME=
DB_USER=
DB_PASS=

# Admin Panel Password
# For production, use ADMIN_PASSWORD_HASH with bcrypt instead of plaintext
ADMIN_PASSWORD=your-secure-password-here
ADMIN_PASSWORD_HASH=
ADMIN_SESSION_MINUTES=30

# SMTP Configuration (for contact form emails)
SMTP_HOST=mail.example.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=ngo@example.org
SMTP_PASS=your-smtp-password
MAIL_TO=ngo@example.org
MAIL_FROM=ngo@example.org
MAIL_FROM_NAME=Your Organization Name

# Turnstile (free reCAPTCHA alternative)
TURNSTILE_SECRET_KEY=

# CORS (allowed origins, comma-separated)
# Example: https://www.legion-of-titans.org,https://admin.legion-of-titans.org
CORS_ALLOWED_ORIGINS=
